<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#000000"
    tools:context=".SettingsActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00AA00"
        android:orientation="vertical" >

        <CheckBox
            android:id="@+id/chkViewBob"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/viewbob_options" />

        <CheckBox
            android:id="@+id/chkVibrate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/vibrate_options" />

        <CheckBox
            android:id="@+id/chkMusic"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/playmusic_options" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:background="#FFFF00"
        android:gravity="right"
        android:orientation="vertical" >

        <Button
            android:id="@+id/btnExitSettings"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="29dp"
            android:layout_marginRight="38dp"
            android:text="@string/backtomenu" />
    </LinearLayout>

</LinearLayout>