<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/derelict_background_empty"
    android:orientation="vertical" >

    <CheckBox
        android:id="@+id/chkShowPlaceNames"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:background="#999"
        android:text="Show place names" />

    <br.odb.derelict2d.ExploreStationView
        android:id="@+id/overviewMap"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:padding="0dip" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:background="#555"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:padding="5dp" >

        <Spinner
            android:id="@+id/spnDirection"
            android:layout_width="fill_parent"
            android:layout_height="match_parent"
            android:layout_weight="0.81"
            android:background="@color/derelict_foreground" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <br.odb.gamelib.android.GameView
                android:id="@+id/gvMove"
                android:layout_width="123dp"
                android:layout_height="match_parent" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Go"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textColor="#FFF" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout><!-- From: file:/Users/monty/gitcenter/derelict/Derelict2D-trunk/app/src/main/res/layout-large/fragment_explore_station.xml -->