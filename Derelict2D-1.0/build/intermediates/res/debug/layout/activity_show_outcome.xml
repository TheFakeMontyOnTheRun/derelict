<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/derelict_background_empty"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".ShowOutcomeActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/derelict_background"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/txtOutcome"
            android:layout_width="match_parent"
            android:layout_height="301dp"
            android:layout_margin="50dp"
            android:background="@color/derelict_foreground"
            android:text="Large Text"
            android:textAppearance="?android:attr/textAppearanceLarge" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:text="Thank you for playing  "
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <br.odb.gamelib.android.GameView
                android:id="@+id/gvGameLogoOutcome"
                android:layout_width="wrap_content"
                android:layout_height="100dp"
                android:layout_weight="0.09" />

        </LinearLayout>
    </LinearLayout>

